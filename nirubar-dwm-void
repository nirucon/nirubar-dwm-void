#!/bin/sh

# Simple script to display system information with xsetroot

# Function to check if Font Awesome is installed
check_font_awesome() {
    fc-list | grep -q -i "Font Awesome"
}

# Set identifier based on font availability
IDENTIFIER=$(check_font_awesome && echo "fontawesome" || echo "text")

# Check if the device is a laptop
IS_LAPTOP=$(ls /sys/class/power_supply | grep -q 'BAT' && echo true || echo false)

# Check if WiFi card is available
HAS_WIFI=$(command -v nmcli >/dev/null 2>&1 && nmcli device status | grep -q wifi && echo true || echo false)

# Function to get RAM usage
get_ram_usage() {
    RAM=$(free -h | awk '/^Mem:/ {print $3 "/" $2}')
    if [ "$IDENTIFIER" = "fontawesome" ]; then
        echo " $RAM"
    else
        echo "mem: $RAM"
    fi
}

# Function to get disk usage for the root filesystem
get_disk_usage() {
    DISK=$(df -h / | awk 'END{print $3 "/" $2}')
    if [ "$IDENTIFIER" = "fontawesome" ]; then
        echo " $DISK"
    else
        echo "disk: $DISK"
    fi
}

# Function to get the current date and time
get_datetime() {
    date "+%Y-%m-%d %H:%M"
}

# Function to get battery status with diagnostics
get_battery_status() {
    echo "Checking battery status..." >&2
    BATTERY_STATUS=""
    for battery in /sys/class/power_supply/BAT*; do
        if [ -d "$battery" ]; then
            CHARGE=$(cat "$battery/capacity")
            STATUS=$(cat "$battery/status")
            BAT_NAME=$(basename "$battery")
            echo "Found $BAT_NAME: $CHARGE% $STATUS" >&2
            if [ "$IDENTIFIER" = "fontawesome" ]; then
                ICON=$(case $CHARGE in
                           [8-9][0-9]|100) echo " ";;
                           [6-7][0-9]) echo " ";;
                           [4-5][0-9]) echo " ";;
                           [2-3][0-9]) echo " ";;
                           *) echo " ";;
                       esac)
                [ "$STATUS" = "Charging" ] && ICON="$ICON "
                BATTERY_STATUS="$BATTERY_STATUS$ICON $CHARGE% "
            else
                if [ "$STATUS" = "Charging" ]; then
                    ICON="bat: $CHARGE% (charging)"
                else
                    ICON="bat: $CHARGE%"
                fi
                BATTERY_STATUS="$BATTERY_STATUS$BAT_NAME: $ICON "
            fi
        else
            echo "No battery directory found at $battery" >&2
        fi
    done
    echo "$BATTERY_STATUS"
}

# Function to detect the network manager in use
detect_network_manager() {
    if command -v nmcli >/dev/null 2>&1; then
        echo "nmcli"
    elif command -v iw >/dev/null 2>&1; then
        echo "iw"
    elif command -v iwconfig >/dev/null 2>&1; then
        echo "iwconfig"
    elif command -v wpa_cli >/dev/null 2>&1; then
        echo "wpa_cli"
    else
        echo "none"
    fi
}

# Function to get WiFi status using the detected network manager
get_wifi_status() {
    if [ "$HAS_WIFI" = true ]; then
        NETWORK_MANAGER=$(detect_network_manager)
        case $NETWORK_MANAGER in
            nmcli)
                CONNAME=$(nmcli -t -f active,ssid dev wifi | grep '^yes' | cut -d: -f2)
                ;;
            iw)
                CONNAME=$(iw dev wlan0 link | grep 'SSID' | awk '{print $2}')
                ;;
            iwconfig)
                CONNAME=$(iwconfig wlan0 | grep 'ESSID' | awk -F '"' '{print $2}')
                ;;
            wpa_cli)
                CONNAME=$(wpa_cli status | grep '^ssid=' | awk -F '=' '{print $2}')
                ;;
            none)
                CONNAME=""
                ;;
        esac

        if [ -z "$CONNAME" ]; then
            if [ "$IDENTIFIER" = "fontawesome" ]; then
                echo " Disconnected"
            else
                echo "wifi: disconnected"
            fi
        else
            if [ "$IDENTIFIER" = "fontawesome" ]; then
                echo " $CONNAME"
            else
                echo "wifi: $CONNAME"
            fi
        fi
    else
        echo ""
    fi
}

# Function to update the status bar
update_status() {
    RAM_USAGE=$(get_ram_usage)
    DISK_USAGE=$(get_disk_usage)
    DATE_TIME=$(get_datetime)
    WIFI_STATUS=$(get_wifi_status)

    STATUS_OUTPUT=""

    if [ "$IS_LAPTOP" = true ]; then
        BATTERY_STATUS=$(get_battery_status)
        STATUS_OUTPUT="$BATTERY_STATUS | $RAM_USAGE | $DISK_USAGE | $WIFI_STATUS | $DATE_TIME"
    else
        STATUS_OUTPUT="$RAM_USAGE | $DISK_USAGE | $WIFI_STATUS | $DATE_TIME"
    fi

    xsetroot -name "$STATUS_OUTPUT"
}

# Main loop to update the status bar every minute
while true; do
    update_status
    sleep 60
done
